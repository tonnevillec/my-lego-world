{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans|capitalize }}{% endblock %}

{% block css_page %}css_login{% endblock %}

{% block body %}
    <div class="container has-text-centered">
        <div class="column is-6 is-offset-3">
            <h3 class="title has-text-white">{{ 'login.title'|trans|capitalize }}</h3>
            <hr class="login-hr">
            <p class="subtitle has-text-white">{{ 'login.subtitle'|trans|capitalize }}</p>
            <div class="box">
                <figure class="avatar">
                    {% set v_rand = 'build/images/lego_face_' ~ random(1,4) ~ '.png' %}
                    <img src="{{ asset(v_rand) }}" alt="Lego face">
                </figure>
                <form method="post">
                    {% if error %}
                        <div class="notification is-warning">
                            <button class="delete"></button>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="field">
                        <div class="control">
                            <input class="input is-large" type="text" value="{{ last_username }}" name="_username" id="inputUsername" placeholder="{{ 'user.email.placeholder'|trans|capitalize }}" required autofocus="">
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <input class="input is-large" type="password" name="_password" id="inputPassword" placeholder="{{ 'user.password.placeholder'|trans|capitalize }}">
                        </div>
                    </div>

                    <div class="field">
                        <label class="checkbox">
                            <input type="checkbox" name="_remember_me">
                            {{ 'user.remember_me'|trans|capitalize }}
                        </label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                    <button type="submit" class="button is-block is-info is-large is-fullwidth">{{ 'login.btn_connection'|trans|capitalize }} <i class="fas fa-sign-in-alt" aria-hidden="true"></i></button>
                </form>
            </div>
            <p class="has-text-white">
                <a href="{{ path('app_register') }}">{{ 'login.sign_up'|trans|capitalize }}</a> &nbsp;·&nbsp;
                <a href="../">{{ 'login.forgot_password'|trans|capitalize }}</a> &nbsp;·&nbsp;
                <a href="../">{{ 'login.need_help'|trans|capitalize }}?</a>
            </p>
        </div>
    </div>
{% endblock %}
